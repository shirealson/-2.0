/* pages/more/more.wxss */
@import "/pages/index/index.wxss";

.vertical-center{
  position: relative;
  top:50%;
  transform: translateY(-50%);
}
#user_info_box{
  height: 200rpx;
  background-color: orange;

  border-radius: 20rpx;
  box-shadow: 0 5rpx 3px #d8d7d7;
  border:1px solid #d8d7d7;
}
.user_avatar{
  border:1px solid #d8d7d7;
  height:150rpx;
  width:150rpx;
  border-radius: 75rpx;
}
#pic_area{
  margin: 0 0 20rpx 0;
  background-color: #FBFBFB;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 3px #d8d7d7;
  border:1px solid #d8d7d7;
  min-height:900rpx;
 
}
#upload-btn{
  background-color: #606060;
  color: white;
  font-size:30rpx;
  margin-left:10rpx;
  box-shadow: 0 5rpx 3px #d8d7d7;
 

}
.img_card{
  width: 40%;
  margin-left: 4%;
  padding: 15rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 3px #d8d7d7;
  border:1px solid #d8d7d7;
  background-color:white;
}
.img_card:nth-child(odd){
  margin-right:0;
}

#upload-tips-bg{
    position: fixed;
    z-index: 2;
    top: 0;
    background-color: rgba(0, 0, 0, 0.6);
    width: 100%;
    height: 200%;
    text-align: center;
    
}
#upload-tips{
    width: 80%;
    margin: 0 auto;
    margin-top:100rpx;
    background-color: white;
    border-radius: 20rpx;
    border:1px solid #d8d7d7;
    min-height:900rpx;


}
.tips-text{
    font-size:25rpx;
    color:#808080;
    padding: 10rpx;
    text-align: left;
}
